	<%= form_for :actives, url: {action: "active_user"} do|f| %>
	<input type ="hidden" name = "id" id= "ghg" value = <%=@user.id%>>
  	<%= f.submit "Active Now",class: "btn btn-large btn-primary", data: { confirm: 'Active this user?'}%>
  	<%end%>
<%else%>
