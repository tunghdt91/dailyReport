<!DOCTYPE HTML>
<html>
<head><title>New report</title>
<script type="text/javascript">
$( document ).ready(function() {
    $('#group_id').change(function() {
      //document.getElementById("current_name").innerHTML = document.getElementById("group_id").value;
        $.ajax({
          "url": "/get_group_name",
          "type": "GET",
          "data":{"id": document.getElementById("group_id").value},
          success:function(result){
           $("#current_name").html(result);
          }});
  });
});

</script>
</head>
<!-- end javascript  -->
<body>
<%= form_for @namegroup do |f| %>
	<% number_group = @groups.count-1%>
Group ID:
<select id="group_id">
	<option value="">Please select</option>
	<% for i in 0..number_group %>
	  <option  value=<%= @groups[i].group_id%> > <%= @groups[i].group_id%></option>
	<%end%>
</select>
    <b>Current Name</b> :<span style="font-size: 16px; color: red; font-style: bold"><p id="current_name"></p></span>
  	<div class="field">
      <%= f.label :'Group Name' %><br />
       <%= f.text_field :group_name%>
    </div>
   <div class="actions">
    <%=f.submit "Save", class: "btn btn-large btn-primary" %>
  </div>
<%end%>
</body>
</html>